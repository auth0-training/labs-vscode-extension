{
  "name": "auth0-vsc",
  "displayName": "Auth0",
  "description": "Visualize Auth0 tenant information inside Visual Studio Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:auth0.app-explorer",
    "onCommand:auth0.deploy"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auth0.signIn",
        "title": "Sign In"
      },
      {
        "command": "auth0.refreshApps",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "auth0.helloAuziros",
        "title": "HelloAuziros"
      },
      {
        "command": "auth0.copyValue",
        "title": "Copy Value",
        "icon": "$(files)"
      },
      {
        "command": "auth0.copyAsJson",
        "title": "Copy as JSON"
      },
      {
        "command": "auth0.deploy",
        "title": "Deploy to Auth0"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "auth0-explorer",
          "title": "Auth0 Explorer",
          "icon": "media/auth0.svg"
        }
      ]
    },
    "views": {
      "auth0-explorer": [
        {
          "id": "auth0.app-explorer",
          "name": "Applications",
          "icon": "media/auth0.svg",
          "contextualTitle": "Auth0 Explorer"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "auth0.app-explorer",
        "contents": "Manage your Auth0 account by signing in into your Auth0 tenant.\n\n[Sign In](command:auth0.signIn)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "auth0.refreshApps",
          "when": "view == auth0.app-explorer",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "auth0.signIn",
          "when": "auth0:state != SignedIn"
        }
      ],
      "view/item/context": [
        {
          "when": "view == auth0.app-explorer && viewItem == ValueTreeItem",
          "command": "auth0.copyValue",
          "group": "inline"
        },
        {
          "when": "view == auth0.app-explorer && viewItem == ApplicationRootTreeItem",
          "command": "auth0.copyAsJson",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceFilename == auth0.yml",
          "command": "auth0.deploy",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
    "watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
    "package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/auth0": "^2.20.9",
    "@types/glob": "^7.1.3",
    "@types/js-yaml": "^4.0.0",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.19.15",
    "@types/polka": "^0.5.2",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "auth0": "^2.32.0",
    "axios": "^0.21.1",
    "keytar": "^7.3.0",
    "polka": "^0.5.2",
    "qs": "^6.9.6",
    "auth0-extension-tools": "^1.5.2",
    "auth0-source-control-extension-tools": "^4.2.0",
    "js-yaml": "^4.0.0"
  }
}
