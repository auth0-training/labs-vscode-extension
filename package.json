{
  "name": "auth0-vsc",
  "displayName": "Auth0",
  "description": "Visualize Auth0 tenant information inside Visual Studio Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:auth0-app-explorer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auth0.authenticate",
        "title": "Authenticate"
      },
      {
        "command": "auth0.refreshApps",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "auth0.copyValue",
        "title": "Copy Value",
        "icon": "$(files)"
      },
      {
        "command": "auth0.copyAsJson",
        "title": "Copy as JSON"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "auth0-explorer",
          "title": "Auth0 Explorer",
          "icon": "media/auth0.svg"
        }
      ]
    },
    "views": {
      "auth0-explorer": [
        {
          "id": "auth0-app-explorer",
          "name": "Applications",
          "icon": "media/auth0.svg",
          "contextualTitle": "Auth0 Explorer"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "auth0-app-explorer",
        "contents": "Welcome to Auth0!\n[Authenticate](command:auth0.authenticate)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "auth0.refreshApps",
          "when": "view == auth0-app-explorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "when": "view == auth0-app-explorer && viewItem == ValueTreeItem",
          "command": "auth0.copyValue",
          "group": "inline"
        },
        {
          "when": "view == auth0-app-explorer && viewItem == ApplicationRootTreeItem",
          "command": "auth0.copyAsJson",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
    "watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
    "package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/auth0": "^2.20.9",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "auth0": "^2.30.0"
  }
}
