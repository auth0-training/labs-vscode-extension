{
  "name": "auth0-vsce",
  "displayName": "Auth0",
  "description": "Visualize Auth0 tenant information inside Visual Studio Code",
  "version": "0.0.1",
  "publisher": "Auth0",
  "repository": "https://github.com/auth0/vscode-extension",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auth0.signIn",
        "title": "Sign In"
      },
      {
        "command": "auth0.app.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "auth0.app.add",
        "title": "Add",
        "icon": "$(plus)"
      },
      {
        "command": "auth0.app.remove",
        "title": "Remove",
        "icon": "$(trash)"
      },
      {
        "command": "auth0.app.addCallbackUrl",
        "title": "Add Callback URL",
        "icon": "$(plus)"
      },
      {
        "command": "auth0.app.removeCallbackUrl",
        "title": "Remove Callback URL",
        "icon": "$(trash)"
      },
      {
        "command": "auth0.app.editRotationType",
        "title": "Edit Rotation Type",
        "icon": "$(edit)"
      },
      {
        "command": "auth0.app.editTokenLifetime",
        "title": "Edit Token Lifetime",
        "icon": "$(edit)"
      },
      {
        "command": "auth0.app.editLeeway",
        "title": "Edit Leeway",
        "icon": "$(edit)"
      },
      {
        "command": "auth0.helloAuziros",
        "title": "HelloAuziros"
      },
      {
        "command": "auth0.copyValue",
        "title": "Copy Value",
        "icon": "$(files)"
      },
      {
        "command": "auth0.copyAsJson",
        "title": "Copy as JSON"
      },
      {
        "command": "auth0.deploy",
        "title": "Deploy to Auth0"
      },
      {
        "command": "auth0.api.add",
        "title": "Add an API",
        "icon": "$(plus)"
      },
      {
        "command": "auth0.api.remove",
        "title": "Remove",
        "icon": "$(trash)"
      },
      {
        "command": "auth0.api.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "auth0.api.copyAsJson",
        "title": "Copy as JSON"
      },
      {
        "command": "auth0.api.editAllowOfflineAccess",
        "title": "Edit Allow Offline Access",
        "icon": "$(edit)"
      },
      {
        "command": "auth0.api.editTokenLifetime",
        "title": "Edit Token Lifetime",
        "icon": "$(edit)"
      },
      {
        "command": "auth0.api.editTokenLifetimeWeb",
        "title": "Edit Token Lifetime (web)",
        "icon": "$(edit)"
      },
      {
        "command": "auth0.actions.add",
        "title": "Add",
        "icon": "$(plus)"
      },
      {
        "command": "auth0.actions.open",
        "title": "Open Action",
        "icon": "$(edit)"
      },
      {
        "command": "auth0.actions.deploy",
        "title": "Deploy Action",
        "icon": "$(rocket)"
      },
      {
        "command": "auth0.actions.refresh",
        "title": "Refresh Actions",
        "icon": "$(refresh)"
      },
      {
        "command": "auth0.actions.remove",
        "title": "Remove",
        "icon": "$(trash)"
      },
      {
        "command": "auth0.actions.addDependency",
        "title": "Add Dependency",
        "icon": "$(plus)"
      },
      {
        "command": "auth0.actions.removeDependency",
        "title": "Remove Dependency",
        "icon": "$(trash)"
      },
      {
        "command": "auth0.actions.addSecret",
        "title": "Add Secret",
        "icon": "$(plus)"
      },
      {
        "command": "auth0.actions.removeSecret",
        "title": "Remove Secret",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "auth0-explorer",
          "title": "Auth0 Explorer",
          "icon": "media/auth0.svg"
        }
      ]
    },
    "views": {
      "auth0-explorer": [
        {
          "id": "auth0.app-explorer",
          "name": "Applications",
          "icon": "media/auth0.svg",
          "contextualTitle": "Auth0 Explorer"
        },
        {
          "id": "auth0.api-explorer",
          "name": "APIs",
          "contextualTitle": "Auth0 Explorer"
        },
        {
          "id": "auth0.actions-explorer",
          "name": "Actions",
          "icon": "media/auth0.svg",
          "contextualTitle": "Auth0 Explorer"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "auth0.app-explorer",
        "contents": "Manage your Auth0 account by signing in into your Auth0 tenant.\n\n[Sign In](command:auth0.signIn)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "auth0.app.add",
          "when": "auth0:isAuthenticated == true && view == auth0.app-explorer",
          "group": "navigation"
        },
        {
          "command": "auth0.app.refresh",
          "when": "auth0:isAuthenticated == true && view == auth0.app-explorer",
          "group": "navigation"
        },
        {
          "command": "auth0.api.refresh",
          "when": "auth0:isAuthenticated == true && view == auth0.api-explorer",
          "group": "navigation"
        },
        {
          "command": "auth0.api.add",
          "when": "auth0:isAuthenticated == true && view == auth0.api-explorer",
          "group": "navigation"
        },
        {
          "command": "auth0.actions.add",
          "when": "auth0:isAuthenticated == true && view == auth0.actions-explorer",
          "group": "navigation"
        },
        {
          "command": "auth0.actions.refresh",
          "when": "auth0:isAuthenticated == true && view == auth0.actions-explorer",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "auth0.api.add",
          "when": "auth0:isAuthenticated == true"
        },
        {
          "command": "auth0.api.refresh",
          "when": "auth0:isAuthenticated == true"
        },
        {
          "command": "auth0.app.add",
          "when": "auth0:isAuthenticated == true"
        },
        {
          "command": "auth0.app.refresh",
          "when": "auth0:isAuthenticated == true"
        },
        {
          "command": "auth0.actions.refresh",
          "when": "auth0:isAuthenticated == true"
        },
        {
          "command": "auth0.actions.add",
          "when": "auth0:isAuthenticated == true"
        },
        {
          "command": "auth0.deploy",
          "when": "auth0:isAuthenticated == true"
        },
        {
          "command": "auth0.api.remove",
          "when": "false"
        },
        {
          "command": "auth0.copyValue",
          "when": "false"
        },
        {
          "command": "auth0.copyAsJson",
          "when": "false"
        },
        {
          "command": "auth0.api.copyAsJson",
          "when": "false"
        },
        {
          "command": "auth0.api.editAllowOfflineAccess",
          "when": "false"
        },
        {
          "command": "auth0.api.editTokenLifetime",
          "when": "false"
        },
        {
          "command": "auth0.api.editTokenLifetimeWeb",
          "when": "false"
        },

        {
          "command": "auth0.app.addCallbackUrl",
          "when": "false"
        },
        {
          "command": "auth0.app.removeCallbackUrl",
          "when": "false"
        },
        {
          "command": "auth0.app.editRotationType",
          "when": "false"
        },
        {
          "command": "auth0.app.editTokenLifetime",
          "when": "false"
        },
        {
          "command": "auth0.app.editLeeway",
          "when": "false"
        },
        {
          "command": "auth0.actions.remove",
          "when": "false"
        },
        {
          "command": "auth0.actions.addDependency",
          "when": "false"
        },
        {
          "command": "auth0.actions.removeDependency",
          "when": "false"
        },
        {
          "command": "auth0.actions.addSecret",
          "when": "false"
        },
        {
          "command": "auth0.actions.removeSecret",
          "when": "false"
        },
        {
          "command": "auth0.actions.deploy",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "when": "view == auth0.app-explorer && viewItem == ApplicationValueTreeItem",
          "command": "auth0.copyValue",
          "group": "inline"
        },
        {
          "when": "view == auth0.app-explorer && viewItem == ApplicationRootTreeItem",
          "command": "auth0.copyAsJson",
          "group": "navigation"
        },
        {
          "when": "view == auth0.app-explorer && viewItem == ApplicationRootTreeItem",
          "command": "auth0.app.remove",
          "group": "inline"
        },
        {
          "when": "view == auth0.app-explorer && viewItem == ApplicationTreeItem:CallbackUrls",
          "command": "auth0.app.addCallbackUrl",
          "group": "inline"
        },
        {
          "when": "view == auth0.app-explorer && viewItem == ApplicationValueTreeItem:CallbackUrl",
          "command": "auth0.app.removeCallbackUrl",
          "group": "inline"
        },
        {
          "when": "view == auth0.app-explorer && viewItem == ApplicationValueTreeItem:RotationType",
          "command": "auth0.app.editRotationType",
          "group": "inline"
        },
        {
          "when": "view == auth0.app-explorer && viewItem == ApplicationValueTreeItem:TokenLifetime",
          "command": "auth0.app.editTokenLifetime",
          "group": "inline"
        },
        {
          "when": "view == auth0.app-explorer && viewItem == ApplicationValueTreeItem:Leeway",
          "command": "auth0.app.editLeeway",
          "group": "inline"
        },
        {
          "when": "view == auth0.api-explorer && viewItem == ApiValueTreeItem",
          "command": "auth0.copyValue",
          "group": "inline"
        },
        {
          "when": "view == auth0.api-explorer && viewItem == ApiRootTreeItem",
          "command": "auth0.api.copyAsJson",
          "group": "navigation"
        },
        {
          "when": "view == auth0.api-explorer && viewItem == ApiRootTreeItem",
          "command": "auth0.api.remove",
          "group": "inline"
        },
        {
          "when": "view == auth0.api-explorer && viewItem == ApiValueTreeItem:AllowOfflineAccess",
          "command": "auth0.api.editAllowOfflineAccess",
          "group": "inline"
        },
        {
          "when": "view == auth0.api-explorer && viewItem == ApiValueTreeItem:TokenLifetime",
          "command": "auth0.api.editTokenLifetime",
          "group": "inline"
        },
        {
          "when": "view == auth0.api-explorer && viewItem == ApiValueTreeItem:TokenLifetimeWeb",
          "command": "auth0.api.editTokenLifetimeWeb",
          "group": "inline"
        },
        {
          "when": "view == auth0.actions-explorer && viewItem == ActionRootTreeItem",
          "command": "auth0.actions.open",
          "group": "inline@1"
        },
        {
          "when": "view == auth0.actions-explorer && viewItem == ActionRootTreeItem",
          "command": "auth0.actions.deploy",
          "group": "inline@2"
        },
        {
          "when": "view == auth0.actions-explorer && viewItem == ActionRootTreeItem",
          "command": "auth0.actions.remove",
          "group": "inline@3"
        },
        {
          "when": "view == auth0.actions-explorer && viewItem == ActionTreeItem:Dependencies",
          "command": "auth0.actions.addDependency",
          "group": "inline"
        },
        {
          "when": "view == auth0.actions-explorer && viewItem == ActionValueTreeItem:Dependency",
          "command": "auth0.actions.removeDependency",
          "group": "inline"
        },
        {
          "when": "view == auth0.actions-explorer && viewItem == ActionTreeItem:Secrets",
          "command": "auth0.actions.addSecret",
          "group": "inline"
        },
        {
          "when": "view == auth0.actions-explorer && viewItem == ActionValueTreeItem:Secret",
          "command": "auth0.actions.removeSecret",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "when": "auth0:isAuthenticated == true && resourceFilename == auth0.yml",
          "command": "auth0.deploy",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "vscode:package": "vsce package",
    "compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
    "watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
    "package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/auth0": "^2.20.9",
    "@types/glob": "^7.1.3",
    "@types/js-yaml": "^4.0.0",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.19.15",
    "@types/polka": "^0.5.2",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "prettier": "^2.2.1",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "vsce": "^1.84.0",
    "vscode-test": "^1.4.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "auth0": "^2.32.0",
    "auth0-extension-tools": "^1.5.2",
    "auth0-source-control-extension-tools": "^4.2.0",
    "axios": "^0.21.1",
    "js-yaml": "^4.0.0",
    "keytar": "^7.3.0",
    "polka": "^0.5.2",
    "qs": "^6.9.6"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "quoteProps": "consistent",
    "semi": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
